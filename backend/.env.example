# Email Configuration (Gmail)
EMAIL_USER=your-email@gmail.com
EMAIL_APP_PASSWORD=your-gmail-app-password

# Google Cloud Configuration
# Path to your service account credentials JSON file
GOOGLE_APPLICATION_CREDENTIALS=./credentials/service-account-key.json

# Google Drive & Sheets IDs
TEMPLATE_SPREADSHEET_ID=your-template-spreadsheet-id
PARENT_FOLDER_ID=your-parent-folder-id
MASTER_SHEET_ID=your-master-sheet-id

# Service Account Email
SERVICE_ACCOUNT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com

# Admin Configuration
ADMIN_EMAIL=admin@example.com
NOTIFICATION_EMAILS=admin1@example.com, admin2@example.com

# Firebase Project (optional - usually auto-detected)
FIREBASE_PROJECT_ID=your-firebase-project-id

# Environment
NODE_ENV=development
